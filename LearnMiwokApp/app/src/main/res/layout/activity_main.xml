<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context="com.example.magician.miwokapp.MainActivity">
    <!-- this code have animation in views by using>>"?android:attr/selectableItemBackground"  -->
    <!-- Numbers category -->
    <FrameLayout
        style="@style/CategoryFrameView"
        android:background="@color/colorNumbersTextView">

        <TextView
            android:id="@+id/textView_numbers"
            style="@style/CodeFontTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"

            android:text="@string/category_numbers" />
    </FrameLayout>
    <!-- Colors category -->
    <FrameLayout
        style="@style/CategoryFrameView"
        android:background="@color/colorColorsTextView">

        <TextView
            android:id="@+id/textView_colors"
            style="@style/CodeFontTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/category_colors" />
    </FrameLayout>

    <!-- Family category -->
    <FrameLayout
        style="@style/CategoryFrameView"
        android:background="@color/colorFamillyTextView">

        <TextView
            android:id="@+id/textView_familly"
            style="@style/CodeFontTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"

            android:text="@string/category_familly" />
    </FrameLayout>
    <!-- Phrases category -->
    <FrameLayout
        style="@style/CategoryFrameView"
        android:background="@color/colorPhrasesTextView">

        <TextView
            android:id="@+id/textView_phrases"
            style="@style/CodeFontTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"

            android:text="@string/category_phrases" />
    </FrameLayout>


</LinearLayout>
